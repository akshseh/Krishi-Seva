    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'/>
    
    <!--Materialize-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.1/css/materialize.min.css">
    
  </head>
  <body>
    
    <!--NavBar-->    
    <div class="navbar-fixed">
      <nav id="the-nav">
        <div class="nav-wrapper white">
          <!--Logo-->
          <a href="/" class="brand-logo" style="color: #09f;padding-left: 30px">
            <img src="/stylesheets/img/new.png" style="height:56px;padding-top: 4px">
          </a>
          <!--Menu icon for small screen devices-->
          <a href="#" data-activates="mobile-demo" class="button-collapse right"><i class="material-icons" style="color:#000">menu</i></a>
          <!--Nav content-->
          <ul id="pc" class="right hide-on-med-and-down">
            <li><a class="waves-effect waves-lighten" href="/farmer/sell">Sell</a></li>
            <li><a class="waves-effect waves-lighten" href="/farmer/buy">Buy</a></li>
            <li><a class="waves-effect waves-lighten" href="/farmer/ins">Govt. Schemes</a></li>
            <li><a class="waves-effect waves-lighten active">Help</a></li>
            <li><a class="waves-effect waves-lighten" href="/farmer/history">History</a></li>
            <li><a class="waves-effect waves-lighten" href="/logout">Logout</a></li>
          </ul>
        </div>
      </nav>    
    </div>
    
    <!--Nav content for small screen devices-->
    <ul class="side-nav" id="mobile-demo">
      <li><a class="waves-effect waves-lighten" href="/farmer/sell">Sell</a></li>
      <li><a class="waves-effect waves-lighten active">Buy</a></li>
      <li><a class="waves-effect waves-lighten" href="/farmer/ins">Govt. Schemes</a></li>
      <li><a class="waves-effect waves-lighten" href="/farmer/help">Help</a></li>
      <li><a class="waves-effect waves-lighten" href="/farmer/history">History</a>
      </li>
      <li><a class="waves-effect waves-lighten" href="/logout">Logout</a></li>
    </ul>
    
    <!--Content-->
    <div id="content-div">
      <h1 class="header">Soil analysis</h1>
      <form class="row" method="post">
        <div class="row">
          <div class="input-field col s12 m4">
            <input value="soil-type-A" name="price" id="st" type="text" class="validate" disabled>
            <label for="st">Your soil type is: </label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12 m4">
            <input value="0" name="price" id="area" type="text" class="validate" onchange="areaChanged()">
            <label for="area">Your farming area: </label>
          </div>
        </div>
      </form>
      <h1 class="header">Recommended crops</h1>
      <div class="row">
        <div class="col s12 l4">
          <iframe class="col s12" height="250" src="https://www.youtube.com/embed/tdPDE_gcyzc" frameborder="0" allowfullscreen></iframe>
          <br><br><center style="padding-top: 250px"><a href="/farmer/buy" target="_blank"><button class="btn light-blue waves-effect">Buy now</button></a></center>
        </div>
        <div class="col s12 l4">
          <iframe class="col s12" height="250" width="400" src="https://www.youtube.com/embed/qy3IJKGna_Q" frameborder="0" allowfullscreen></iframe>
          <br><br><center style="padding-top: 250px"><a href="/farmer/buy" target="_blank"><button class="btn light-blue waves-effect">Buy now</button></a></center>
        </div>
        <div class="col s12 l4">
          <iframe class="col s12" height="250" src="https://www.youtube.com/embed/vD95tkwkKZ0" frameborder="0" allowfullscreen></iframe>
          <br><br><center style="padding-top: 250px"><a href="/farmer/buy" target="_blank"><button class="btn light-blue waves-effect">Buy now</button></a></center>
        </div>
      </div>
    </div>
    <br>
    <br>
    
    <!--Scripts import-->
     <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="/javascripts/script.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.1/js/materialize.min.js"></script>
    <script type="text/javascript" src="/javascripts/dashboard.js"></script>
